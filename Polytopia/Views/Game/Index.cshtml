@model Polytopia.Models.Game

@{
    if (ViewData != null){
    ViewData["Title"] = "Game Index";
    } else {
        <p>ViewData could not be loaded. </p>
    }
}
<h1>The Battle of Polytopia</h1>
<h2>Üdv, @Model.Username!</h2>
<h3>Please select a tribe! @Model.SelectedTribe</h3>

<h4>Number of bots @Model.BotCount</h4>
<ul>
    @foreach (var botTribe in Model.BotTribes)
    {
        <li>Bot tribe: @botTribe</li>
    }
</ul>

<h3>Térkép</h3>
<div class="map">
    @for (int y = 0; y < 16; y++)
    {
        <div class="row">
            @for (int x = 0; x < 16; x++)
            {
                <div class="tile @Model.Map[x, y]">@Model.Map[x, y]</div>
            }
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/style.css">
